@model Role

<style>

    .header {
        margin-bottom: 20px;
    }

        .header h3 {
            margin-bottom: 5px;
            margin-top: 25px;
        }

    .separator {
        height: 1px;
        background: #e8e8e8;
        margin: 0px -25px;
    }

    .inputs {
        margin-top: 25px;
    }

        .inputs label {
            letter-spacing: 1px;
            margin-bottom: 7px;
        }

        .inputs #submit #cancel {
            width: 50%;
            margin-top: 20px;
            padding: 15px 0;
            letter-spacing: 1px;
        }
</style>

<div class="form-row">
    <div class="form-group col-5">
        <form method="post">
            <div class="form-group header">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <h3>Role</h3>
            </div>

            <div class="form-group">
                <div class="clearfix separator"></div>
            </div>

            <div class="form-group inputs">
                <input type="hidden" asp-for="Id" />

                <label asp-for="Name" class="form-text"></label>
                <input asp-for="Name" class="form-control" placeholder="Name" autofocus />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
                
            <partial name="_CancelUpsertButtonsPartial" model="Model.Id" />

        </form>
    </div>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}