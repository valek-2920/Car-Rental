@model RoleViewModel

<style>

    .header {
        margin-bottom: 20px;
    }

        .header h3 {
            margin-bottom: 5px;
            margin-top: 25px;
        }

    .separator {
        height: 1px;
        background: #e8e8e8;
        margin: 0px -25px;
    }

    .inputs {
        margin-top: 25px;
    }

        .inputs label {
            letter-spacing: 1px;
            margin-bottom: 7px;
        }

        .inputs #submit {
            width: 100%;
            margin-top: 20px;
            padding: 15px 0;
            letter-spacing: 1px;
        }
</style>

<div class="form-row">
    <div class="form-group col-8">
        <div class="form-group header">
            <h3>Roles</h3>
        </div>

        <div class="form-group">
            <div class="clearfix separator"></div>
        </div>

        <div class="input-group">
            <a class="btn btn-outline-info" asp-action="upsert">
                <i class="fa-solid fa-circle-plus"></i> New Role
            </a>
        </div>

        @foreach (var role in Model.Roles)
        {
            <div class="input-group inputs">
                <div class="col-4">@role.Name</div>
                <div class="col-4 text-right">
                    <a class="btn btn-outline-info" asp-action="upsert" asp-route-id="@role.Id">
                        <i class="fa-solid fa-pen-to-square"></i>
                    </a>
                    <a class="btn btn-outline-danger">
                        <i class="fa-solid fa-trash"></i>
                    </a>
                    <a class="btn btn-outline-dark" asp-action="usersrole" asp-route-id="@role.Id">
                        <i class="fa-solid fa-users"></i>
                    </a>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
