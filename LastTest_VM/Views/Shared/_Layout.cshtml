<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Pets Store</title>

    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Poppins:400,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <script src="https://kit.fontawesome.com/4fe965d05a.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/owl.carousel.css" />
    <link rel="stylesheet" href="~/css/magnific-popup.css" />
    <link rel="stylesheet" href="~/css/animate.css" />
    <link rel="stylesheet" href="~/css/meanmenu.min.css" />
    <link rel="stylesheet" href="~/css/main.css" />
    <link rel="stylesheet" href="~/css/responsive.css" />

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</head>
<body>
    <!--Pagina de carga-->
    <div class="loader">
        <div class="loader-inner">
            <div class="circle"></div>
        </div>
    </div>
    <!--fin Pagina de carga-->
    <!-- header -->
    <div class="top-header-area" id="sticker">
        <div class="container">
            <div class="login text-right">
                <ul>

                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Iniciar Sesión", "Login", "Accounts")</li>
                        <li>@Html.ActionLink("Registrarse", "Register", "Accounts")</li>
                    }
                    else
                    {
                        <li class="nav-item text-right">
                            <form asp-controller="Accounts" asp-action="Logout" method="post">
                                <button type="submit" class="nav-link text-dark btn border-0">
                                    Logout
                                </button>
                            </form>
                        </li>
                    }

                </ul>
            </div>
            <div class="row">
                <div class="col-lg-12 col-sm-12 text-center">
                    <div class="main-menu-wrap">
                        <!-- logo -->
                        <div class="site-logo">
                            <a href="@Url.Action("Index", "Home")">
                                <img src="~/img/logo.png" alt="">
                            </a>
                        </div>
                        <!-- fin logo -->
                        <!-- menu -->
                        <nav class="main-menu">
                            <ul>
                                    @if (User.IsInRole("Administrators"))
                                    {
                                        <li class="nav-item">
                                            <a class="nav-link text-dark" asp-controller="Administration" asp-action="Index">Administration</a>
                                        </li>
                                        <!-- Herramientas de Administrador -->
                                        <li>
                                            @Html.ActionLink("Herramientas de Administrador", "Inventario", "Inventario")
                                            <ul class="sub-menu">
                                                <li>@Html.ActionLink("Inventario Productos", "Inventario", "Inventario")</li>
                                                <li>@Html.ActionLink("Agregar Producto", "AgregarProducto", "Inventario")</li>
                                                <li>@Html.ActionLink("Consultar Usuarios", "Clientes", "User")</li>
                                            </ul>
                                        </li>
                                    }
                            </ul>
                        </nav>
                        <!-- fin menu -->
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- fin header -->
    <div class="">
        @RenderBody()
    </div>
    <!-- footer -->
    <div class="footer-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-6">
                    <div class="footer-box about-widget">
                        <h2 class="widget-title">Acerca de Nosotros</h2>
                        <p>Encuentra la mejor carrecoría para tus aventuras</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="footer-box get-in-touch">
                        <h2 class="widget-title">Contacto</h2>
                        <ul>
                            <li>San Francisco, Heredia.</li>
                            <li>consultas@rentAtCar.com</li>
                            <li>+506 2222 2222</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- fin footer -->
    <!-- copyright -->
    <div class="copyright">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-12">
                    <p>
                        Copyrights &copy; 2022 - <a href="https://ufidelitas.ac.cr/">Universidad Fidélitas</a>,  Todos los derechos reservados.<br>
                        Creado por: Valeria Morales</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
    <script src="~/js/jquery-1.11.3.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/js/jquery.countdown.js"></script>
    <script src="~/js/jquery.isotope-3.0.6.min.js"></script>
    <script src="~/js/main.js"></script>
    <script src="~/js/waypoints.js"></script>
    <script src="~/js/owl.carousel.min.js"></script>
    <script src="~/js/jquery.magnific-popup.min.js"></script>
    <script src="~/js/jquery.meanmenu.min.js"></script>
    <script src="~/js/sticker.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
